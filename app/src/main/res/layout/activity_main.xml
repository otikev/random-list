<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.otikev.sequence.MainActivity">

    <EditText
        android:digits="1,2,3,4,5,6,7,8,9,0"
        android:id="@+id/etRandom"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <Button
        android:id="@+id/buttonGenerateRecursive"
        android:text="@string/generate_sequence_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/buttonGenerateIterative"
        android:text="@string/generate_sequence_i"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listViewSequence"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>